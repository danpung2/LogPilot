{
  "id": null,
  "uid": "logpilot-infrastructure",
  "title": "LogPilot Infrastructure Metrics",
  "tags": [
    "logpilot",
    "infrastructure"
  ],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "30s",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "title": "Pod Status",
      "type": "stat",
      "gridPos": {
        "x": 0,
        "y": 0,
        "w": 6,
        "h": 4
      },
      "targets": [
        {
          "expr": "count(up{namespace=\"logpilot\",job=~\"logpilot.*\"} == 1)",
          "legendFormat": "Running Pods",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "decimals": 0,
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "value": 0,
                "color": "red"
              },
              {
                "value": 1,
                "color": "green"
              }
            ]
          }
        }
      }
    },
    {
      "id": 2,
      "title": "Pod Restarts (Last 1h)",
      "type": "stat",
      "gridPos": {
        "x": 6,
        "y": 0,
        "w": 6,
        "h": 4
      },
      "targets": [
        {
          "expr": "sum(increase(kube_pod_container_status_restarts_total{namespace=\"logpilot\"}[1h]))",
          "legendFormat": "Restarts",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "decimals": 0,
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "value": 0,
                "color": "green"
              },
              {
                "value": 1,
                "color": "yellow"
              },
              {
                "value": 5,
                "color": "red"
              }
            ]
          }
        }
      }
    },
    {
      "id": 3,
      "title": "Container Memory Usage",
      "type": "stat",
      "gridPos": {
        "x": 12,
        "y": 0,
        "w": 6,
        "h": 4
      },
      "targets": [
        {
          "expr": "avg(logpilot:memory_usage_percent)",
          "legendFormat": "Avg Memory %",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "decimals": 1,
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "value": 0,
                "color": "green"
              },
              {
                "value": 70,
                "color": "yellow"
              },
              {
                "value": 85,
                "color": "red"
              }
            ]
          }
        }
      }
    },
    {
      "id": 4,
      "title": "Container CPU Usage",
      "type": "stat",
      "gridPos": {
        "x": 18,
        "y": 0,
        "w": 6,
        "h": 4
      },
      "targets": [
        {
          "expr": "avg(logpilot:cpu_usage_percent)",
          "legendFormat": "Avg CPU %",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "decimals": 1,
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "value": 0,
                "color": "green"
              },
              {
                "value": 70,
                "color": "yellow"
              },
              {
                "value": 85,
                "color": "red"
              }
            ]
          }
        }
      }
    },
    {
      "id": 5,
      "title": "Memory Usage by Pod",
      "type": "graph",
      "gridPos": {
        "x": 0,
        "y": 4,
        "w": 12,
        "h": 8
      },
      "targets": [
        {
          "expr": "container_memory_working_set_bytes{namespace=\"logpilot\",container=\"logpilot\"}",
          "legendFormat": "{{pod}}",
          "refId": "A"
        }
      ],
      "yaxes": [
        {
          "format": "bytes",
          "label": "Memory"
        },
        {
          "format": "short"
        }
      ],
      "xaxis": {
        "mode": "time"
      }
    },
    {
      "id": 6,
      "title": "CPU Usage by Pod",
      "type": "graph",
      "gridPos": {
        "x": 12,
        "y": 4,
        "w": 12,
        "h": 8
      },
      "targets": [
        {
          "expr": "rate(container_cpu_usage_seconds_total{namespace=\"logpilot\",container=\"logpilot\"}[5m]) * 100",
          "legendFormat": "{{pod}}",
          "refId": "A"
        }
      ],
      "yaxes": [
        {
          "format": "percent",
          "label": "CPU %"
        },
        {
          "format": "short"
        }
      ],
      "xaxis": {
        "mode": "time"
      }
    },
    {
      "id": 7,
      "title": "Network I/O",
      "type": "graph",
      "gridPos": {
        "x": 0,
        "y": 12,
        "w": 12,
        "h": 8
      },
      "targets": [
        {
          "expr": "rate(container_network_receive_bytes_total{namespace=\"logpilot\"}[5m])",
          "legendFormat": "RX - {{pod}}",
          "refId": "A"
        },
        {
          "expr": "rate(container_network_transmit_bytes_total{namespace=\"logpilot\"}[5m])",
          "legendFormat": "TX - {{pod}}",
          "refId": "B"
        }
      ],
      "yaxes": [
        {
          "format": "Bps",
          "label": "Bytes/sec"
        },
        {
          "format": "short"
        }
      ],
      "xaxis": {
        "mode": "time"
      },
      "seriesOverrides": [
        {
          "alias": "/TX.*/",
          "transform": "negative-Y"
        }
      ]
    },
    {
      "id": 8,
      "title": "Disk I/O",
      "type": "graph",
      "gridPos": {
        "x": 12,
        "y": 12,
        "w": 12,
        "h": 8
      },
      "targets": [
        {
          "expr": "rate(container_fs_reads_bytes_total{namespace=\"logpilot\"}[5m])",
          "legendFormat": "Read - {{pod}}",
          "refId": "A"
        },
        {
          "expr": "rate(container_fs_writes_bytes_total{namespace=\"logpilot\"}[5m])",
          "legendFormat": "Write - {{pod}}",
          "refId": "B"
        }
      ],
      "yaxes": [
        {
          "format": "Bps",
          "label": "Bytes/sec"
        },
        {
          "format": "short"
        }
      ],
      "xaxis": {
        "mode": "time"
      }
    },
    {
      "id": 9,
      "title": "PVC Usage",
      "type": "gauge",
      "gridPos": {
        "x": 0,
        "y": 20,
        "w": 12,
        "h": 8
      },
      "targets": [
        {
          "expr": "kubelet_volume_stats_used_bytes{namespace=\"logpilot\"} / kubelet_volume_stats_capacity_bytes{namespace=\"logpilot\"} * 100",
          "legendFormat": "{{persistentvolumeclaim}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "value": 0,
                "color": "green"
              },
              {
                "value": 70,
                "color": "yellow"
              },
              {
                "value": 90,
                "color": "red"
              }
            ]
          }
        }
      }
    },
    {
      "id": 10,
      "title": "Node Resource Distribution",
      "type": "graph",
      "gridPos": {
        "x": 12,
        "y": 20,
        "w": 12,
        "h": 8
      },
      "targets": [
        {
          "expr": "sum by (node) (container_memory_working_set_bytes{namespace=\"logpilot\"})",
          "legendFormat": "Memory - {{node}}",
          "refId": "A"
        },
        {
          "expr": "sum by (node) (rate(container_cpu_usage_seconds_total{namespace=\"logpilot\"}[5m]))",
          "legendFormat": "CPU - {{node}}",
          "refId": "B"
        }
      ],
      "yaxes": [
        {
          "format": "short",
          "label": "Resources"
        },
        {
          "format": "short"
        }
      ],
      "xaxis": {
        "mode": "time"
      }
    },
    {
      "id": 11,
      "title": "Pod Uptime",
      "type": "table",
      "gridPos": {
        "x": 0,
        "y": 28,
        "w": 24,
        "h": 8
      },
      "targets": [
        {
          "expr": "(time() - kube_pod_start_time{namespace=\"logpilot\"})",
          "legendFormat": "{{pod}}",
          "refId": "A",
          "format": "table",
          "instant": true
        }
      ],
      "transformations": [
        {
          "id": "organize",
          "options": {
            "excludeByName": {},
            "indexByName": {},
            "renameByName": {
              "pod": "Pod Name",
              "Value": "Uptime (seconds)"
            }
          }
        }
      ],
      "fieldConfig": {
        "overrides": [
          {
            "matcher": {
              "id": "byName",
              "options": "Uptime (seconds)"
            },
            "properties": [
              {
                "id": "unit",
                "value": "s"
              }
            ]
          }
        ]
      }
    }
  ]
}
