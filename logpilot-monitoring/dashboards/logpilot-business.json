{
  "id": null,
  "uid": "logpilot-business",
  "title": "LogPilot Business Metrics",
  "tags": [
    "logpilot",
    "business"
  ],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "30s",
  "time": {
    "from": "now-6h",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "title": "Total Logs by Level",
      "type": "stat",
      "gridPos": {
        "x": 0,
        "y": 0,
        "w": 24,
        "h": 4
      },
      "targets": [
        {
          "expr": "sum by (level) (logpilot:logs_total_by_level{level!=\"\"})",
          "legendFormat": "{{level}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "decimals": 0,
          "color": {
            "mode": "palette-classic"
          }
        },
        "overrides": [
          {
            "matcher": {
              "id": "byName",
              "options": "ERROR"
            },
            "properties": [
              {
                "id": "color",
                "value": {
                  "mode": "fixed",
                  "fixedColor": "red"
                }
              }
            ]
          },
          {
            "matcher": {
              "id": "byName",
              "options": "WARN"
            },
            "properties": [
              {
                "id": "color",
                "value": {
                  "mode": "fixed",
                  "fixedColor": "yellow"
                }
              }
            ]
          },
          {
            "matcher": {
              "id": "byName",
              "options": "INFO"
            },
            "properties": [
              {
                "id": "color",
                "value": {
                  "mode": "fixed",
                  "fixedColor": "green"
                }
              }
            ]
          },
          {
            "matcher": {
              "id": "byName",
              "options": "DEBUG"
            },
            "properties": [
              {
                "id": "color",
                "value": {
                  "mode": "fixed",
                  "fixedColor": "blue"
                }
              }
            ]
          }
        ]
      },
      "options": {
        "orientation": "horizontal",
        "textMode": "value_and_name"
      }
    },
    {
      "id": 2,
      "title": "Log Ingestion Rate (requests/sec)",
      "type": "graph",
      "gridPos": {
        "x": 0,
        "y": 4,
        "w": 12,
        "h": 8
      },
      "targets": [
        {
          "expr": "sum by (level) (rate(logpilot_logs_received_total{namespace=\"logpilot\"}[5m]))",
          "legendFormat": "{{level}}",
          "refId": "A"
        }
      ],
      "yaxes": [
        {
          "format": "reqps",
          "label": "requests/sec"
        },
        {
          "format": "short"
        }
      ],
      "xaxis": {
        "mode": "time"
      },
      "stack": true
    },
    {
      "id": 3,
      "title": "Logs Distribution by Level",
      "type": "piechart",
      "gridPos": {
        "x": 12,
        "y": 4,
        "w": 12,
        "h": 8
      },
      "targets": [
        {
          "expr": "sum by (level) (logpilot:logs_total_by_level{level!=\"\"})",
          "legendFormat": "{{level}}",
          "refId": "A"
        }
      ],
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "right",
          "values": [
            "value",
            "percent"
          ]
        },
        "pieType": "donut",
        "displayLabels": [
          "name",
          "percent"
        ]
      }
    },
    {
      "id": 4,
      "title": "Top 10 Channels by Log Volume",
      "type": "bargauge",
      "gridPos": {
        "x": 0,
        "y": 12,
        "w": 12,
        "h": 8
      },
      "targets": [
        {
          "expr": "topk(10, sum by (channel) (logpilot:logs_total_by_channel))",
          "legendFormat": "{{channel}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "min": 0,
          "color": {
            "mode": "palette-classic"
          }
        }
      },
      "options": {
        "orientation": "horizontal",
        "displayMode": "gradient"
      }
    },
    {
      "id": 5,
      "title": "Log Rate by Channel",
      "type": "graph",
      "gridPos": {
        "x": 12,
        "y": 12,
        "w": 12,
        "h": 8
      },
      "targets": [
        {
          "expr": "topk(10, sum by (channel) (rate(logpilot_logs_received_total{namespace=\"logpilot\"}[5m])))",
          "legendFormat": "{{channel}}",
          "refId": "A"
        }
      ],
      "yaxes": [
        {
          "format": "short",
          "label": "logs/sec"
        },
        {
          "format": "short"
        }
      ],
      "xaxis": {
        "mode": "time"
      },
      "legend": {
        "show": true,
        "alignAsTable": true,
        "avg": true,
        "max": true,
        "current": true
      }
    },
    {
      "id": 6,
      "title": "ERROR Log Rate",
      "type": "graph",
      "gridPos": {
        "x": 0,
        "y": 20,
        "w": 12,
        "h": 8
      },
      "targets": [
        {
          "expr": "sum(logpilot:error_log_rate)",
          "legendFormat": "ERROR logs/sec",
          "refId": "A"
        }
      ],
      "yaxes": [
        {
          "format": "short",
          "label": "ERROR logs/sec"
        },
        {
          "format": "short"
        }
      ],
      "xaxis": {
        "mode": "time"
      },
      "alert": {
        "name": "High ERROR Log Rate",
        "conditions": [
          {
            "evaluator": {
              "type": "gt",
              "params": [
                100
              ]
            },
            "operator": {
              "type": "and"
            },
            "query": {
              "params": [
                "A",
                "5m",
                "now"
              ]
            },
            "type": "query"
          }
        ]
      }
    },
    {
      "id": 7,
      "title": "Storage Distribution by Type",
      "type": "piechart",
      "gridPos": {
        "x": 12,
        "y": 20,
        "w": 12,
        "h": 8
      },
      "targets": [
        {
          "expr": "sum(rate(http_server_requests_seconds_count{namespace=\"logpilot\",uri=\"/api/logs\",status=\"201\"}[5m]))",
          "legendFormat": "Success",
          "refId": "A"
        }
      ],
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "right",
          "values": [
            "value",
            "percent"
          ]
        },
        "pieType": "pie",
        "displayLabels": [
          "name",
          "percent"
        ]
      }
    },
    {
      "id": 8,
      "title": "Log Timeline Heatmap",
      "type": "heatmap",
      "gridPos": {
        "x": 0,
        "y": 28,
        "w": 24,
        "h": 8
      },
      "targets": [
        {
          "expr": "sum(rate(http_server_requests_seconds_count{namespace=\"logpilot\",uri=\"/api/logs\"}[1m]))",
          "legendFormat": "logs/sec",
          "refId": "A",
          "format": "time_series"
        }
      ],
      "options": {
        "calculate": true,
        "calculation": {},
        "cellGap": 2,
        "color": {
          "mode": "scheme",
          "scheme": "Spectral",
          "steps": 128
        },
        "yAxis": {
          "decimals": 0,
          "unit": "short"
        }
      }
    }
  ]
}
